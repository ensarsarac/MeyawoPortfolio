
@model List<MeyawoPortfolios.Models.TblService>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hizmetler Listesi</h2>
<hr />
<table class="table table-bordered">
    <tr>
        <th>Hizmet ID</th>
        <th>Hizmet Adı</th>
        <th>Hizmet Açıklaması</th>
        <th>Hizmet Görseli</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.ImageUrl</td>
            <td><a href="/AdminService/DeleteService/@item.ServiceID/" class="btn btn-danger">Sil</a></td>
            <td><a href="/AdminService/UpdateService/@item.ServiceID/" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/AdminService/CreateService/" class="btn btn-primary">Yeni Hizmet Ekle</a>