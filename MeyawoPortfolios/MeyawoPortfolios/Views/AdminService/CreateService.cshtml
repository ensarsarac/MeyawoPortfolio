
@model MeyawoPortfolios.Models.TblService

@{
    ViewBag.Title = "CreateProject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Hizmet Ekle</h2>
<hr />
<form method="post" action="/AdminService/CreateService/">
    <div class="form-group mb-3">
        <label class="form-label">Hizmet Adı</label>
        <input class="form-control" name="Title" />
    </div>
    <div class="form-group mb-3">
        <label class="form-label">Hizmet Açıklaması</label>
        <textarea class="form-control" cols="10" rows="7" name="Description"></textarea>
    </div>
    <div class="form-group mb-3">
        <label class="form-label">Hizmet Görsel</label>
        <input class="form-control" name="ImageUrl" />
    </div>
    <button type="submit" class="btn btn-primary">Hizmeti Kaydet</button>
</form>
