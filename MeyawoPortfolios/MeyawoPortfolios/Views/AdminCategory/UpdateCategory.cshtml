
@model MeyawoPortfolios.Models.TblCategory

@{
    ViewBag.Title = "CreateProject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategori Güncelleme Sayfası</h2>
<hr />
<form method="post" action="/AdminCategory/UpdateCategory/">
    <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
    <div class="form-group mb-3">
        <label class="form-label">Kategori Adı</label>
        <input class="form-control" value="@Model.CategoryName" name="CategoryName" />
    </div>
    <button type="submit" class="btn btn-primary">Kategori Güncelle</button>
</form>
