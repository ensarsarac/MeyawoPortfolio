
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3 col-sm-6">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title text-dark"><img src="~/Templates/List-Icon.svg.png" style="width:40px;height:40px;" /> Kategori Sayısı</h3>
                    <div class="d-inline-block">
                        <h2 class="text-dark">@ViewBag.v</h2>
                        <p class="text-dark mb-0">@DateTime.Now.ToString("MMMM") - @DateTime.Now.Year</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title text-dark"><img src="~/Templates/what-is-project-management-process.png" class="rounded-pill" style="width:40px;height:40px;" /> Proje Sayısı</h3>
                    <div class="d-inline-block">
                        <h2 class="text-dark">@ViewBag.v1</h2>
                        <p class="text-dark mb-0">@DateTime.Now.ToString("MMMM") - @DateTime.Now.Year</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title text-dark"><img src="~/Templates/message-icon-png-3.png" class="rounded-pill" style="width:40px;height:40px;" /> Mesaj Sayısı</h3>
                    <div class="d-inline-block">
                        <h2 class="text-dark">@ViewBag.v2</h2>
                        <p class="text-dark mb-0">@DateTime.Now.ToString("MMMM") - @DateTime.Now.Year</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title text-dark"><img src="~/Templates/1174008.png" class="rounded-pill" style="width:40px;height:40px;" /> En Çok Kullanılan Kategori</h5>
                    <div class="d-inline-block">
                        <h2 class="text-dark">@ViewBag.v3</h2>
                        <p class="text-dark mb-0">@DateTime.Now.ToString("MMMM") - @DateTime.Now.Year</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md-6">
            <div>
                <canvas id="myChart"></canvas>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Projeler</h5>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tr>
                            <th>#</th>
                            <th>Proje Adı</th>
                            <th>Kategori</th>
                        </tr>
                        @foreach (var item in ViewBag.v4)
                        {
                            <tr>
                                <td>@item.ProjectID</td>
                                <td>@item.Title</td>
                                <td>@item.TblCategory.CategoryName</td>
                            </tr>
                        }
                    </table>
                    
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  const ctx = document.getElementById('myChart');

  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
      datasets: [{
        label: '# of Votes',
        data: [12, 19, 3, 5, 2, 3],
        borderWidth: 1
      }]
    },
    options: {
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });
</script>