
@model List<MeyawoPortfolios.Models.TblProject>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Proje Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>Proje ID</th>
        <th>Proje Başlığı</th>
        <th>Proje Açıklama</th>
        <th>Proje Kategori</th>
        <th>Proje Görsel</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Github Link</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProjectID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.TblCategory.CategoryName</td>
            <td>@item.ImageUrl</td>
            <td><a href="/AdminProject/DeleteProject/@item.ProjectID/" class="btn btn-danger">Sil</a></td>
            <td><a href="/AdminProject/UpdateProject/@item.ProjectID/" class="btn btn-warning">Güncelle</a></td>
            <td><a href="@item.ProjectUrl" target="_blank" class="btn btn-dark">Github</a></td>
        </tr>
    }
</table>
<a href="/AdminProject/CreateProject/" class="btn btn-primary">Yeni Proje Ekle</a>