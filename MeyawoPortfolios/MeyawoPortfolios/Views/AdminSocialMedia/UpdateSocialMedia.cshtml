
@model MeyawoPortfolios.Models.TblSocialMedia

@{
    ViewBag.Title = "CreateProject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Sosyal Medya Hesabı Güncelleme Sayfası</h2>
<hr />
<form method="post" action="/AdminSocialMedia/CreateSocialMedia/">
    <input type="hidden" name="SocialMediaID" value="@Model.SocialMediaID" />
    <div class="form-group mb-3">
        <label class="form-label">Platform Adı</label>
        <input class="form-control" name="Title" value="@Model.Title" />
    </div>
    <div class="form-group mb-3">
        <label class="form-label">Url</label>
        <input class="form-control" name="Url" value="@Model.Url"/>
    </div>
    <div class="form-group mb-3">
        <label class="form-label">İkon</label>
        <input class="form-control" name="Icon" value="@Model.Icon" />
    </div>
    <button type="submit" class="btn btn-primary">Sosyal Medya Hesabını Güncelle</button>
</form>
