
@model MeyawoPortfolios.Models.TblAbout

<section class="section pt-0" id="about">
    <!-- container -->
    <div class="container text-center">
        <!-- about wrapper -->
        <div class="about">
            <div class="about-img-holder">
                <img src="~/Templates/meyawo-1.0.0/assets/imgs/@Model.ImageUrl" class="about-img"
                     alt="">
            </div>
            <div class="about-caption">
                <p class="section-subtitle">@Model.Title</p>
                <h2 class="section-title mb-3">@Model.Header</h2>
                <p>
                    @Model.Description
                </p>
                <a href="~/Templates/CV.pdf" class="btn-rounded btn btn-outline-primary mt-4" download>Download CV</a>
            </div>
        </div><!-- end of about wrapper -->
    </div><!-- end of container -->
</section>
